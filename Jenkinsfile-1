pipeline {

  agent any
  stages {

    stage('Checkout Source') {
      steps {
        git url:'https://github.com/myorg009/acme_fitness_demo.git', branch:'master'
      }
    }

    stage('Deploy App') {
      steps {
      script {
          sh 'sudo /usr/local/bin/kubectl config use-context kubernetes-admin@aws-workload-04-tanzu-cluster --kubeconfig=/var/aws-config/admin.conf'
          //sh 'sudo /usr/local/bin/kubectl create ns shopping --kubeconfig=/var/aws-config/admin.conf'
          sh 'sudo /usr/local/bin/kubectl get ns --kubeconfig=/var/aws-config/admin.conf'
          sh 'sudo /usr/local/bin/kubectl apply -f kubernetes-manifests/secrets.yaml -n shopping --kubeconfig=/var/aws-config/admin.conf'
          sh 'sudo /usr/local/bin/kubectl apply -f kubernetes-manifests/acme_fitness_cluster1.yaml -n shopping --kubeconfig=/var/aws-config/admin.conf'
          sh 'sudo /usr/local/bin/kubectl apply -f gateway.yaml -n shopping --kubeconfig=/var/aws-config/admin.conf'
}
      }
    }

  }

}
