pipeline {

  agent any
  stages {

    stage('Checkout Source') {
      steps {
        git url:'https://github.com/srinivas1981/acme_fitness_demo.git', branch:'master'
      }
    }

    stage('Deploy App') {
      steps {
      script {        
          sh 'sudo /usr/local/bin/kubectl apply -f kubernetes-manifests/secrets.yaml -n demo-acme-1'
          sh 'sudo /usr/local/bin/kubectl apply -f kubernetes-manifests/acme_fitness_cluster1.yaml -n demo-acme-1'
          sh 'sudo /usr/local/bin/kubectl apply -f gateway.yaml -n demo-acme-1'
}
      }
    }

  }

}
