pipeline {

  agent any
  stages {

    stage('Checkout Source') {
      steps {
        git url:'https://github.com/myorg009/acme_fitness_demo.git', branch:'master'
      }
    }

    stage('Deploy App') {
      steps {
      script {
          sh 'sudo /usr/local/bin/kubectl config use-context aws-workload-04-tanzu-cluster-admin@aws-workload-04-tanzu-cluster --kubeconfig=/var/aws-config/config'
          //sh 'sudo /usr/local/bin/kubectl create ns shopping'
          sh 'sudo /usr/local/bin/kubectl get ns'
          sh 'sudo /usr/local/bin/kubectl apply -f kubernetes-manifests/secrets.yaml -n shopping --kubeconfig=/var/aws-config/config'
          sh 'sudo /usr/local/bin/kubectl apply -f kubernetes-manifests/acme_fitness_cluster1.yaml -n shopping --kubeconfig=/var/aws-config/config'
          sh 'sudo /usr/local/bin/kubectl apply -f gateway.yaml -n shopping --kubeconfig=/var/aws-config/config'
}
      }
    }

  }

}
